<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alessandrahenkes.exerciciodefixacao4.ExcluirActivity">

    <TextView
        android:id="@+id/tv_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="marca do veiculo"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="203dp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/tv_cor"
        android:layout_alignStart="@+id/tv_placa" />

    <TextView
        android:id="@+id/tv_marca_veiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_marca"
        android:layout_alignStart="@+id/tv_cor_carro"
        android:text="Marca:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="196dp" />

    <TextView
        android:id="@+id/tv_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="257dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/tv_marca_veiculo" />

    <TextView
        android:id="@+id/tv_novo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="novo"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="264dp"
        android:layout_alignBottom="@+id/tv_estado"
        android:layout_alignStart="@+id/tv_marca" />

    <Button
        android:id="@+id/bt_excluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_novo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:text="EXCLUIR"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="333dp" />

    <TextView
        android:id="@+id/tv_placa_veiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placa:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_cor_carro"
        android:layout_marginTop="65dp" />

    <TextView
        android:id="@+id/tv_placa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placa do veiculo"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="85dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="21dp"
        android:layout_alignBottom="@+id/tv_placa_veiculo"
        android:layout_toEndOf="@+id/tv_placa_veiculo" />

    <TextView
        android:id="@+id/tv_cor_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cor:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="137dp"
        android:layout_below="@+id/tv_placa_veiculo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/tv_cor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cor do veiculo"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="144dp"
        android:layout_alignBottom="@+id/tv_cor_carro"
        android:layout_toEndOf="@+id/tv_placa_veiculo" />

</RelativeLayout>
